<%- include('shared/header.ejs')%> <%- include('shared/adminNavigation.ejs')%>

<main class="p-3 m-0 border-0 bd-example m-0 border-0" style="width: 1100px">
  <div class="accomodationFilter" style="width: 180px">
    <form action="changeFilterResolvedPosts" method="post">
      <label for="category">Category:</label>
      <select id="category" name="category" required>
        <option value="jobs">Full-Time Jobs</option>
        <option value="academics">Academics</option>
        <option value="accommodation">Accommodation</option>
        <option value="SocialEvents">Social Events</option>
        <option value="mentalHealth">Mental Health</option>
        <option value="part-time-jobs">Part-Time Jobs</option>
      </select>
      <button type="submit" class="filter">Filter</button>
    </form>
  </div>
  <div class="container" style="width: 65%">
    <h2>List of Resolved Posts</h2>
    <ul class="list-group">
      <% resolvedHelpRequests.forEach(post => { %>
      <li class="list-group-item">
        <p>Posted By <%= post.userName %></p>
        <p>Title : <%= post.title %></p>
        <p>Description : <%= post.description %></p>
        <p>Category : <%= post.category %></p>
      </li>
      <% }) %>
    </ul>
    <nav aria-label="Page navigation">
      <ul class="pagination mt-4 justify-content-center">
        <% if (currentPage > 1) { %>
        <li class="page-item">
          <a
            class="page-link"
            href="/resolvedHelpPosts?page=<%= currentPage - 1 %>">&laquo;</a>
        </li>
        <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
          <a class="page-link" href="/resolvedHelpPosts?page=<%= i %>"><%= i %></a>
        </li>
        <% } %> <% if (currentPage < totalPages) { %>
        <li class="page-item">
          <a
            class="page-link"
            href="/resolvedHelpPosts?page=<%= currentPage + 1 %>">&raquo;</a>
        </li>
        <% } %>
      </ul>
    </nav>
  </div>
</main>
<%- include('shared/footer.ejs')%>
